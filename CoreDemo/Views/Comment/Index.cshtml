@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<!DOCTYPE html>
<html>
@*<td><a href="#"><i class="fa fa-check text-navy"></i></a></td>*@
<body>          
            <div class="wrapper wrapper-content animated fadeInRight">
                <div class="row"> 
                    
                    <div class="col-lg-12">
                        <div class="ibox ">
                            <div class="ibox-title">
                                <h5>Yorumlar </h5>
                                <div class="ibox-tools">
                                    <a class="collapse-link">
                                        <i class="fa fa-chevron-up"></i>
                                    </a>
  
                                </div>
                            </div>
                            <div class="ibox-content">

                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Kullanıcı</th>
                                            <th>Başlık</th>
                                            <th>Blog</th>
                                            <th>Puan</th>
                                            <th>Tarih</th>
                                            <th>Sil</th>
                                            <th>Düzenle</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model){
                                       <tr>
                                            <th>@item.CommentID</th>
                                            <td>@item.CommentUserName</td>
                                            <td>@item.CommentTitle</td>
                                            <td>@item.Blog.BlogTitle</td>         
                                            <td class="text-navy"> <i class="fa fa-level-up"></i> @item.BlogScore </td>
                                            <td>@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</td>
                                        <td><a href="/Comment/CommentDelete/@item.CommentID" class="btn btn-danger">Sil</a></td>
                                            <td><a href="#" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>   
</body>

</html>

